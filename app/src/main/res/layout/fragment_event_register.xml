<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Title -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/title_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Input title" />

            <Button
                android:id="@+id/apply_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="update title"/>

        </LinearLayout>

        <Button
            android:id="@+id/goto_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to description form"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/goto_prefecture_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to prefecture selection"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Title"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No description"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Description"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No description"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Prefecture"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/prefecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No prefecture"/>


        <!-- Apply -->
        <Button
            android:id="@+id/apply_event_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="apply event"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>

